@import './reset.styl';
@import './base.styl';

body, html {
  height: 100%;
}

#app {
  height: 100%;
  font-family: 'Avenir', Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: #2c3e50;
  font-size: 14px;
}
.shu{
  font-size:12px;
  color:#E9E9E9;
}

.modal .ant-modal-header{
  text-align:center;
  border:none;
}
.modal .ant-modal-body{
  padding:24px 60px;
}
.modal .ant-input{
  margin-top:20px;
}
.modal .ant-modal-footer{
  text-align:center;
  border:none;
  padding-bottom:24px;
  padding-top:0;
}
.operate {
  font-size: 12px;
  a {
    color: #1890FF;
  }
}

.ant-divider, .ant-divider-vertical{
  margin:0 2px;
}
.content {
  padding: 30px;
}

.projectAdd .ant-form-item-label{
  width:100px;
  text-align:left;
}
.size>.ant-form-item-label{
  width:80px;
  text-align:left;
}
.projectAdd .ant-form-item-control-wrapper{
  width:70%
}
.dynamic .ant-form-item-control-wrapper {
  width: 100%;
}
.area .ant-form-item-control-wrapper{
  width:81.5%;
}